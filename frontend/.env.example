# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
VITE_APP_NAME=Auraclothings
VITE_APP_URL=http://localhost:5173

# API Configuration
# Development: http://localhost:5000/api
# Production: https://your-deployed-backend.com/api
VITE_API_URL=http://localhost:5000/api

# Payment Gateway Configuration
# Get your key from: https://dashboard.razorpay.com/app/keys
VITE_PAYMENT_GATEWAY_KEY=

# Cloudinary Configuration (for image uploads)
# Get your cloud name from: https://cloudinary.com/console/
VITE_CLOUDINARY_CLOUD_NAME=

# Email Service Configuration
# Get your API key from: https://sendgrid.com/ or https://www.mailgun.com/
VITE_EMAIL_SERVICE_API_KEY=

# Clerk Authentication Configuration
# Get your publishable key from: https://clerk.com/dashboard
VITE_CLERK_PUBLISHABLE_KEY=

# Analytics Configuration (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=

# Shipping Configuration
VITE_FREE_SHIPPING_THRESHOLD=2000
VITE_STANDARD_SHIPPING_COST=100
VITE_EXPRESS_SHIPPING_COST=200

# Tax Configuration (GST)
VITE_TAX_RATE=0.18
VITE_GST_NUMBER=

# Currency Configuration
VITE_CURRENCY_SYMBOL=â‚¹
